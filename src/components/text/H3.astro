---
interface Props {
	number: number
	className?: string
}

const { number, className = "" } = Astro.props
---

<div class={`flex items-center gap-4 ${className}`}>
	<h3 class="text-xl font-bold text-white lg:text-3xl">
		<span class="text-accent">{number.toString().padStart(2, "0")}.</span>
		<slot />
	</h3>
	<div class="bg-muted h-px w-1/3"></div>
</div>
