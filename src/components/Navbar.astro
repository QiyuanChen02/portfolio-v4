---
import Button from "./Button.astro"
import Logo from "../icons/Logo.astro"
import Menu from "../icons/Menu.astro"
import { links } from "../helpers/links.astro"
---

<nav class="flex items-center justify-between px-8 py-6">
	<Logo />

	<!-- Hamburger Menu (Mobile only) -->
	<button
		id="menu-button"
		type="button"
		class="text-accent h-8 w-8 cursor-pointer transition-transform duration-200 hover:scale-110 md:hidden"
		aria-label="Toggle menu"
	>
		<Menu />
	</button>

	<!-- Navigation Links & Resume Button (Desktop only) -->
	<div class="hidden items-center space-x-6 md:flex">
		<ul class="flex space-x-6">
			{
				links.map((link, i) => (
					<li>
						<a
							href={link.href}
							class="hover:text-accent text-muted font-semibold transition-colors duration-200"
						>
							<span class="text-accent">{i + 1}. </span>
							{link.label}
						</a>
					</li>
				))
			}
		</ul>
		<a
			href="/Qiyuan-Chen-Resume.pdf"
			target="_blank"
			rel="noopener noreferrer"
		>
			<Button text="Resume" />
		</a>
	</div>
</nav>
